<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300sp"
    android:layout_height="wrap_content"
    android:textAlignment="center">

    <TextView
        android:id="@+id/lblreauthenticateusertitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="@string/dialog_confirm_account_delete_title"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/lblreauthenticateuserdescription"
        android:layout_width="267dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/dialog_confirm_account_delete_description"
        android:textAlignment="center"
        android:textColor="@color/colorBlack"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/lblreauthenticateusertitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblreauthenticateusertitle" />

    <EditText
        android:id="@+id/txtreauthenticatepassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="@+id/lblreauthenticateuserdescription"
        app:layout_constraintStart_toStartOf="@+id/lblreauthenticateuserdescription"
        app:layout_constraintTop_toBottomOf="@+id/lblreauthenticateuserdescription" />

    <Button
        android:id="@+id/cmdReauthenticateConfirm"
        style="@style/MyDialogButton"
        android:layout_width="131dp"
        android:layout_height="89dp"
        android:layout_marginTop="8dp"
        android:text="Confirm"
        app:layout_constraintEnd_toEndOf="@+id/txtreauthenticatepassword"
        app:layout_constraintStart_toStartOf="@+id/txtreauthenticatepassword"
        app:layout_constraintTop_toBottomOf="@+id/txtreauthenticatepassword" />
</androidx.constraintlayout.widget.ConstraintLayout>